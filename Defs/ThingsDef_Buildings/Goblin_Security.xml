<Defs>

  <ThingDef Abstract="True" Name="GoblinSecurityBase" ParentName="BuildingBase">
    <thingClass>Building</thingClass>
    <category>Building</category>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="GoblinSecurityBase">
    <defName>Goblin_SpikedBarricade</defName>
    <label>spiked barricade</label>
    <description>A defensive structure providing cover and slowing enemy movement. Consisting of a portable frame covered with many projecting wooden spikes.</description>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <graphicData>
      <texPath>Building/Spiked_Barricade/Spiked_Barricade</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <uiIconPath>Building/Spiked_Barricade/SpikedBarricade_MenuIcon</uiIconPath>
    <altitudeLayer>Building</altitudeLayer>
    <pathCost>55</pathCost>
    <pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.60</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>260</MaxHitPoints>
      <Beauty>-5</Beauty>
      <WorkToBuild>160</WorkToBuild>
      <Flammability>0.3</Flammability>
      <Mass>10</Mass>
    </statBases>
    <size>(1,2)</size>
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>10</costStuffCount>
    <rotatable>true</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <staticSunShadowHeight>0.10</staticSunShadowHeight>
    <designationHotKey>Misc1</designationHotKey>
  </ThingDef>

</Defs>
