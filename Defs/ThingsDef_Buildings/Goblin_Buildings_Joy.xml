<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>TribalDrum</defName>
    <label>tribal drum</label>
    <description>An ancient instrument used to create sweet sounds of rythmic music.</description>
    <graphicData>
      <texPath>Building/Joy/TribalDrum/TribalDrum</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shadowData>
        <volume>(0.65, 0.25, 0.6)</volume>
        <offset>(0, 0, -0.15)</offset>
      </shadowData>
      <damageData>
        <rect>(0.09375,0.296875,0.796875,0.703125)</rect>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <rotatable>false</rotatable>
    <socialPropernessMatters>true</socialPropernessMatters>
    <fillPercent>0.40</fillPercent>
    <minTechLevelToBuild>Neolithic</minTechLevelToBuild>
    <building>
      <joyKind>Gaming_Dexterity</joyKind>
    </building>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>6000</WorkToBuild>
      <Mass>5</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>4</Beauty>
      <JoyGainFactor>1</JoyGainFactor>
    </statBases>
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <pathCost>50</pathCost>
    <passability>PassThroughOnly</passability>
    <designationCategory>Joy</designationCategory>
    <designationHotKey>Misc2</designationHotKey>
    <researchPrerequisites>
      <li>GoblinFurniture</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="FurnitureBase">
    <defName>WrestlingPit</defName>
    <label>wrestling pit</label>
    <description>A pit made out of mud. For wrestling in the spirit of friendly competition</description>
    <graphicData>
      <texPath>Building/Joy/WrestlingPit/WrestlingPit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,3)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <uiIconScale>0.5</uiIconScale>
    <staticSunShadowHeight>0.0</staticSunShadowHeight>
    <castEdgeShadows>false</castEdgeShadows>
    <altitudeLayer>Building</altitudeLayer>
    <rotatable>false</rotatable>
    <socialPropernessMatters>true</socialPropernessMatters>
    <fillPercent>0.40</fillPercent>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <building>
      <joyKind>Gaming_Dexterity</joyKind>
    </building>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>9000</WorkToBuild>
      <Mass>300</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>-2</Beauty>
      <JoyGainFactor>1.1</JoyGainFactor>
    </statBases>
    <size>(2,2)</size>
    <costList>
      <GoblinMud>30</GoblinMud>
    </costList>
    <pathCost>70</pathCost>
    <passability>Standable</passability>
    <designationCategory>Joy</designationCategory>
    <designationHotKey>Misc3</designationHotKey>
    <canOverlapZones>false</canOverlapZones>
    <placeWorkers>
      <li>PlaceWorker_NeverAdjacentUnstandable</li>
    </placeWorkers>
    <constructionSkillPrerequisite>1</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>GoblinMud</li>
    </researchPrerequisites>
  </ThingDef>

</Defs>
