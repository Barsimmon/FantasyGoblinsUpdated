<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- ====================================== Neolithic =========================================== -->

    <ThingDef Name="ApparelMakeableGoblinBase" ParentName="ApparelMakeableBase" Abstract="True">
        <statBases>
            <SellPriceFactor>0.70</SellPriceFactor>
        </statBases>
    </ThingDef>

    <ThingDef ParentName="ApparelMakeableGoblinBase">
        <defName>Leather_GoblinArmour</defName>
        <label>goblin leatherarmor</label>
        <description>A full-body garment crafted using neolithic tools. While it may look primitive, it offers some basic protection.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/Armor/GoblinLeatherArmor/GoblinLeatherArmor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <techLevel>Neolithic</techLevel>
        <costStuffCount>60</costStuffCount>
        <stuffCategories>
            <li>Leathery</li>
        </stuffCategories>
        <tradeability>Sellable</tradeability>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <WorkToMake>2000</WorkToMake>
            <Mass>0.4</Mass>
            <StuffEffectMultiplierArmor>0.65</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.70</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>4.5</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MeleeDodgeChance>0.10</MeleeDodgeChance>
        </equippedStatOffsets>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Item/Equipment/Armor/GoblinLeatherArmor/GoblinLeatherArmor</wornGraphicPath>
            <layers>
                <li>Middle</li>
            </layers>
            <tags>
                <li>NeolithicGoblin</li>
            </tags>
        </apparel>
        <recipeMaker>
            <recipeUsers>
                <li>ElectricTailoringBench</li>
                <li>HandTailoringBench</li>
                <li>CraftingSpot</li>
            </recipeUsers>
            <researchPrerequisite>GoblinBasicGear</researchPrerequisite>
        </recipeMaker>
        <colorGenerator Class="ColorGenerator_Options">
            <options>
                <li>
                    <weight>10</weight>
                    <only>(0.4,0.3,0.15)</only>
                </li>
                <li>
                    <weight>15</weight>
                    <only>(0.6,0.45,0.18)</only>
                </li>
                <li>
                    <weight>20</weight>
                    <only>(0.8,0.6,0.23)</only>
                </li>
            </options>
        </colorGenerator>
    </ThingDef>

